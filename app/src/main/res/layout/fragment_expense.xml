<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/expFragment"
    tools:context="kishore.mad.com.expenseapp.ExpenseFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:id="@+id/linLayMain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_expenses"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/addImage"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/add_icon"
            android:layout_gravity="end"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/noItems"
        android:layout_marginTop="200dp"
        android:layout_marginStart="16dp"
        android:text="@string/there_is_no_expense_to_show_please_add_your_expenses_from_the_menu"/>
    <Spinner
        android:layout_width="160dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/sortBySpinner"></Spinner>
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/filterBySpinner"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"></Spinner>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="100dp"
        ></ListView>
</FrameLayout>
